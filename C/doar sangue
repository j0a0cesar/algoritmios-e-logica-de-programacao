#include <stdio.h>
#include <string.h> 

int main()
{
char nome[20];
int doente, alimentado,idade;
float kg;
  
  printf("Informe seu primeiro nome: ");
  scanf(" %s", nome);
  
  printf("Informe a sua idade: ");
  scanf(" %d", &idade);

  printf("Digite o seu peso: ");
  scanf(" %f", &kg);

  printf("Você está doente? '1' para sim e '2' para não: ");
  scanf(" %d", &doente);

  printf("Você está alimentado? '1' para sim e '2' para não: ");
  scanf(" %d", &alimentado);

 if(idade > 15 && idade < 70 && kg >= 50 && doente == 2 && alimentado == 1){
   printf("Você pode doar sangue %s;\nOs bancos de sangue agradecem pela sua atitude.", nome);
   
 } else {
   printf("Você não pode doar sangue %s;\nObrigado.", nome);
 }

  
return 0;
}
