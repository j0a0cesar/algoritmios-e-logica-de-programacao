 typedef struct{
 	int dia;
 	int mes;
 	int ano;
 }Data;
 
 Data datahoje();
 
 Data datahoje(){
 	Data d;
 	
 	printf("\nInforme o dia:");
 	scanf(" %d",&d.dia);
 	printf("\nInforme o mes:");
 	scanf(" %d",&d.mes); 
	printf("\nInforme o ano:") ;
	scanf(" %d",&d.ano);
	return d;
	 }
	 
