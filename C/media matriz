#include<stdio.h>
int main()
{
int notas[3][5], linha, coluna;
  float media0 [3], media1 [1], media2 [2];
  
printf("Digite valores para os elementos da matriz\n\n");
  for(linha=0; linha<3; linha++){
  for(coluna=0; coluna<5; coluna++){
printf("\nNota[%d][%d]=", linha, coluna);
scanf("%d", &notas[linha][coluna]);
}
}
printf("\n\n------------ SaÃ­da de Dados ------------\n\n");
  for(linha=0; linha<3; linha++){ 
  for(coluna=0; coluna<5; coluna++){
   media0 [0] = (notas[0][0] + notas[0][1] + notas[0][2] + notas[0][3] + notas[0][4]) / 5;
    media1 [1] = (notas[1][0] + notas[1][1] + notas[1][2] + notas[1][3] + notas[1][4]) / 5;
     media2 [2] = (notas[2][0] + notas[2][1] + notas[2][2] + notas[2][3] + notas[2][4]) / 5;
