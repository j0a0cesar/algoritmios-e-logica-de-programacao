FIMSE

  ESCREVA ("Entrar no banheiro e fechar a porta");
    ESCREVA ("Tirar a roupa");
      ESCREVA ("Se posicionar em baixo do chuveiro");
        ESCREVA ("Ligar o chuveiro");
           ESCREVA ("Se ensaboar e se enxaguar");
